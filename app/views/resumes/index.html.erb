<h1>Listing Resumes</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
  </tr>
 
  <% @resumes.each do |resume| %>
    <tr>
      <td><%= resume.title %></td>
      <td><%= resume.date %></td>
      <td><%= link_to 'Show', resume_path(resume) %></td>
      <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
      <td><%= link_to 'Destroy', resume_path(resume),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= button_to "Parse", { :controller => "resumes", :action => "parse"} %>
      </td>
                  </tr>
  <% end %>
</table>
<%= link_to 'New resume', new_resume_path %>
<%= @resumeliststring %>

<%= form_tag resumes_parse_path, method: :get do %>
  <%= text_area_tag(:answer) %>
  <%= submit_tag("Continue", :class => "submit") %>
<% end %>