 <div class="container">
  <h1>Listing Entities</h1><%= link_to 'New Entity', new_entity_path %>


<div class="col-md-12"> 
  <% @entities.each do |entity| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
      <%= image_tag(entity.pic) %>
        <div class="caption">
          <h3><%= entity.name %></h3>
          <p><%= entity.description%></p>
          <%= link_to 'Show', entity_path(entity) %>
          <%= form_tag entities_entry_path, method: :post do %>
            <%= hidden_field_tag :resumeid, current_user.resumeid %>
            <%= hidden_field_tag :entityid, entity.id %>
            <%= submit_tag("Send Resume", :class => "submit") %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<br>
</div>

