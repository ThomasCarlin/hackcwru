<div class="container">

<p>
  <strong>Name:</strong>
  <%= @entity.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @entity.description %>
</p>

<p>
  <strong>Degree:</strong>
  <%= @entity.degree%>
</p>

<p>
  <strong>Major:</strong>
  <%= @entity.major %>
</p>

<p>
  <strong>Positions:</strong>
  <%= @entity.position %>
</p>

<p>
  <strong>Website:</strong>
  <%= @entity.website %>
</p>

<table class="table table-striped">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>School </th>
    <th>Degree</th>
    <th>MGPA/GPA</th>
    <th>Objective</th>
    <th>More</th>
  </tr>
  <% @resumelist.each do |resume| %>
    <tr>
      <% resume.information.each do |info| %>
      <td><%=info.firstname%></td>
      <td><%=info.lastname%></td>
      <% end %>
      <% resume.education.each do |info| %>
      <td><%=info.school %></td>
      <td><%=info.degreetype %> <%=info.degree%></td>
      <td><%=info.mgpa %>/<%=info.gpa%></td>
      <% end %>
      <td><%= link_to 'Show', resume_path(resume) %></td>
  <% end %>
</table>

<div class="well">
<%= @resumeliststring %>
<br>
</div>
<%= form_tag resumes_parse_path, method: :get do %>
  <%= text_area_tag(:answer) %>
  <%= hidden_field_tag :entity, @entity.id %>
  <%= submit_tag("Continue", :class => "submit") %>
<% end %>


<%= link_to 'Back', entities_path %> |
<%= link_to 'Edit', edit_entity_path(@entity) %>
</div>